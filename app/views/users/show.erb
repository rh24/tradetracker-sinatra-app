<!-- display individual user info -->

<h1><%= @user.username %>'s Public Profile</h1>
<h4>Total Trades: <%= @trades.all.size %></h4>
<h4>Years traded: </h4>
<% @year_ids.each do |year_id| %>
  <a href='/years/<%=Year.find(year_id).year%>'><%=Year.find(year_id).year%></a>
<% end %>

<h2>Trades</h2>
<% i = 1 %>
<% while i < @trades.length %>
  <% @trades.each do |t| %>
    <% if t.viewable == true %>
    <!-- make trade.id's clickable -->
    <label><a href='/trades/<%=t.id%>'><%=i%></a>. </label><label>Name/Symbol: </label><%= t.coin %><br>
    &emsp;<label>Quantity: </label><%= t.quantity %><br>
    &emsp;<label>Buy Value (Fiat): </label><%= t.buy_value_fiat %><br>
    &emsp;<label>Sell Value (Fiat): </label><%= t.sell_value_fiat %><br>
    &emsp;<label>Net Profit/Loss: </label><%= (t.sell_value_fiat - t.buy_value_fiat) %><br><br>
    <% i += 1 %>
    <% end %>
  <% end %>
<% end %>
