<!-- list all trades that are publicly viewable
list all trades that are viewable to you (after a follow request) -->

<h1>View All Public Trades</h1>

<!-- list links to /trades/:id -->

<% @trades.each do |t| %>
  <% if t.viewable == true %>
  <label><a href='/trades/<%=t.id%>'><%= t.id %></a>. </label>
  <label>Name/Symbol: </label><%= t.coin %><br>
  &emsp;<label>Quantity: </label><%= t.quantity %><br>
  &emsp;<label>Buy Value (Fiat): </label><%= t.buy_value_fiat %><br>
  &emsp;<label>Sell Value (Fiat): </label><%= t.sell_value_fiat %><br>
  &emsp;<label>Net Profit/Loss: </label><%= (t.sell_value_fiat - t.buy_value_fiat) * t.quantity %><br><br>
  <% end %>
<% end %>
